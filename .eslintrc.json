{
  "root": true,
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": [
    "xo-space/esnext",
    "xo-react/space",
    "plugin:jsx-a11y/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier",
    "prettier/react"
  ],
  "plugins": ["filenames", "jsx-a11y", "prettier"],
  "rules": {
    "prettier/prettier": 1,
    "no-unused-vars": [
      1,
      {
        "vars": "local",
        "args": "after-used"
      }
    ],
    "filenames/match-exported": [2, [null, "camel", "snake"]],
    "react/jsx-no-bind": [
      2,
      {
        "allowBind": true
      }
    ]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
